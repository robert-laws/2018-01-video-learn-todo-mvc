<% title @doctor.name %>

<h1>Doctor Information</h1>

<p>Name: <%= @doctor.name %></p>

<p>Appointments</p>
<ul>
  <% if @doctor.appointments.empty? %>
    <li>No Appointments Scheduled</li>
  <% else %>
    <% @doctor.appointments.each_with_index do |appointment, index| %>    
      <li>
        Appointment # <%= index + 1 %> -- <strong>Patient Name:</strong> <%= appointment.patient.name %> -- <strong>Date & Time</strong>: <%= appointment.date.strftime("%B %d, %Y at %I:%M%p") %>
      </li>
    <% end %>
  <% end %>
</ul>

<hr>

<hr>

<%= link_to 'View all doctors', doctors_path %>